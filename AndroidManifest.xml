<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.aarbot.BreakBooks" android:versionCode="10"
	android:versionName="2.0">

	<uses-sdk android:minSdkVersion="10" android:targetSdkVersion="15" />
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />

	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:theme="@style/AppTheme">
		<activity android:name=".CannonGame" android:label="@string/app_name"
			android:screenOrientation="portrait">

			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:id="@string/cannonstart" android:name=".CannonStart"
			android:label="@string/scoreboard" android:screenOrientation="portrait" />

		<activity android:id="@string/easy" android:name=".CannonViewEasy"
			android:label="@string/scoreboard" android:screenOrientation="landscape" />

		<activity android:id="@string/hard" android:name=".CannonViewHard"
			android:label="@string/scoreboard" android:screenOrientation="landscape" />

		<activity android:name=".HiScoreActivity" android:label="@string/scoreboard"
			android:screenOrientation="portrait" />

		<activity android:id="@string/ghost" android:name=".ghost"
			android:label="@string/how" />


	</application>

</manifest>